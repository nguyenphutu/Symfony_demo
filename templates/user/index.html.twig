{% extends 'base.html.twig' %}

{% block title %}List user!{% endblock %}

{% block body %}
    <div class="container">    

        <h1>All the User</h1>

        <nav class="navbar navbar-inverse">        
            <ul class="nav navbar-nav">
                <li><a href="/user">View All user</a></li>
                <li><a href="/user/create">Create a user</a>
            </ul>
        </nav>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>User name</td>
                    <td>Email</td>
                    <td>Role</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            {% for value in users %}
                <tr>
                    <td>{{ value.id }}</td>
                    <td>{{ value.username }}</td>
                    <td>{{ value.email }}</td>
                    <td>{{ value.role }}</td>
                    <td>                        
                        <a class="btn btn-small btn-success" href="user/{{value.id}}">Show this user</a>
                        <a class="btn btn-small btn-info" href="user/{{value.id}}/edit">Edit this user</a>
                        <a class="btn btn-small btn-danger" href="user/{{value.id}}/delete">Delete this student</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

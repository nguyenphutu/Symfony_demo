{% extends 'base.html.twig' %}

{% block title %}All Student!{% endblock %}

{% block body %}
<div class="container">    

        <h1>All the Student</h1>

        <nav class="navbar navbar-inverse">        
            <ul class="nav navbar-nav">
                <li><a href="/student">View All student</a></li>
                <li><a href="/student/create">Create a student</a>
            </ul>
        </nav>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>FullName</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            {% for value in students %}
                <tr>
                    <td>{{ value.id }}</td>
                    <td>{{ value.fullname }}</td>
                    <td>                        
                        <a class="btn btn-small btn-success" href="student/{{value.id}}">Show this Student</a>
                        <a class="btn btn-small btn-info" href="student/{{value.id}}/edit">Edit this student</a>
                        <a class="btn btn-small btn-danger" href="student/{{value.id}}/delete">Delete this student</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

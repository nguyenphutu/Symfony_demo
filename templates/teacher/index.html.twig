{% extends 'base.html.twig' %}

{% block title %}List teacher!{% endblock %}

{% block body %}
    <div class="container">    

        <h1>All the Teacher</h1>

        <nav class="navbar navbar-inverse">        
            <ul class="nav navbar-nav">
                <li><a href="/teacher">View All Teacher</a></li>
                <li><a href="/teacher/create">Create a Teacher</a>
            </ul>
        </nav>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>FullName</td>
                    <td>Position</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            {% for value in teachers %}
                <tr>
                    <td>{{ value.id }}</td>
                    <td>{{ value.fullname }}</td>
                    <td>{{ value.position }}</td>
                    <td>                        
                        <a class="btn btn-small btn-success" href="teacher/{{value.id}}">Show this Teacher</a>
                        <a class="btn btn-small btn-info" href="teacher/{{value.id}}/edit">Edit this Teacher</a>
                        <a class="btn btn-small btn-danger" href="teacher/{{value.id}}/delete">Delete this student</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
